<form action="{{path('update_product', {productId: order.getId})}}" method="post" enctype="multipart/form-data">
	<div class="user__field-block">
		<label for="categorie">Категория:</label>
		<select id="categorie" name="categorie" required>
			{% for key, name in categories %}
				{% if currCategory == key %}
					<option value="{{key}}" selected class="user__field-value">{{name}}</option>
				{% else %}
					<option value="{{key}}" class="user__field-value">{{name}}</option>
				{% endif %}
			{% endfor %}
		</select>
	</div>

	<div class="user__field-block">
		<label for="name" class="user__field-title">Имя:</label>
		<input type="text" id="name" name="name" required value="{{order.getName}}" class="user__field-value">
	</div>

	<div class="user__field-block">
		<label for="description" class="user__field-title">Описание:</label>
		<textarea id="description" name="description" value="{{order.getDescription}}" class="user__field-value"></textarea>
	</div>

	<div class="view__image-block">
		<label for="image_path" class="user__field-title">Изображение:</label>
		{% if order.getImagePath %}
			<img class="order__image" src="/uploads/order_images/{{order.getImagePath}}">
		{% else %}
			<img class="order__image" src="/uploads/order_images/base_image.png">		
		{% endif %}
		<input type="file" id="image_path" name="image_path" accept=".png, .jpg, .jpeg, .gif">
	</div>

	<div class="user__field-block">
		<label for="price" class="user__field-title">Цена:</label>
		<input type="number" id="price" name="price" required value="{{order.getPrice}}" class="user__field-value">
	</div>

	<div class="user__field-block">
		<label class="user__field-title">Акция:</label>
		{% if order.getFeatured != 0 %}
			<input type="radio" id="featured_yes" name="featured" value="1" required checked class="user__field-value">
			<label for="featured_yes">Да</label>
			<input type="radio" id="featured_no" name="featured" value="0" required class="user__field-value">
			<label for="featured_no">Нет</label>
		{% else %}
			<input type="radio" id="featured_yes" name="featured" value="1" required>
			<label for="featured_yes">Да</label>
			<input type="radio" id="featured_no" name="featured" value="0" required checked>
			<label for="featured_no">Нет</label>
		{% endif %}
	</div>

	<button type="submit">Подтвердить</button>
</form>
